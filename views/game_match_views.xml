<?xml version="1.0"?>
<odoo>

    <record id="game_match_view_form" model="ir.ui.view">
        <field name="name">game.match.form</field>
        <field name="model">game.match</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="note"/>
                        <field name="date"/>
                        <field name="game_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                        <group>
                            <field name="game_match_line_ids" mode="tree" widget="one2many">
                                <tree editable="1">
                                    <field name="player_id"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </group>
                        </page>
                    </notebook>
              </sheet>
            </form>
        </field>
    </record>

